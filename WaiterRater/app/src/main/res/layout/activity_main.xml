<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sushiko.waiterrater.MainActivity">

    <TextView
        android:id="@+id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text=""/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_below="@id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="Enter cost and pick a rating"/>

    <EditText
        android:id="@+id/et_input"
        android:hint="   ie. 12.90   "
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_output"
        android:layout_marginTop="45dp"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content" />

    <NumberPicker
        android:id="@+id/np_rating"
        android:layout_below="@id/tv_message"
        android:layout_toRightOf="@id/et_input"
        android:layout_margin="15dp"
        android:layout_width="35dp"
        android:layout_height="75dp" />


    <Button
        android:id="@+id/btn_enter"
        android:layout_below="@+id/et_input"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Enter"/>

</RelativeLayout>